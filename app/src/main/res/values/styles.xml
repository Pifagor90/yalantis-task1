<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/AppBar</item>
        <item name="colorPrimaryDark">@color/StatusBar</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionOverflowButtonStyle">@style/MyActionButtonOverflow</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="MyActionButtonOverflow" parent="android:style/Widget.Holo.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_ab_menu</item>
    </style>

    <style name="SingleEventActivityRow" parent="WidthMatchHeightWrap">
        <item name="android:paddingTop">@dimen/content_main_row_paddingTop</item>
        <item name="android:paddingBottom">@dimen/content_main_row_paddingBottom</item>
    </style>

    <style name="AllWrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="WidthMatchHeightWrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SingleEventActivityTextView" parent="AllWrapContent">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="SingleEventActivityInputedTextColor" parent="AllWrapContent">
        <item name="android:textColor">@color/content_main_input_TextColor</item>
    </style>

    <style name="SingleEventActivityInputedTextColor.TextSize" parent="SingleEventActivityInputedTextColor">
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="SingleEventActivityInputedTextView" parent="SingleEventActivityInputedTextColor.TextSize">
        <item name="android:layout_alignParentRight">true</item>
    </style>


    <style name="AppTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/AppTabTextColor</item>
    </style>

    <style name="ItemListEventActivityData">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/black_87</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ListEventActivityTabItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
